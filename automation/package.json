{
  "name": "auction-app-automation",
  "version": "1.0.0",
  "description": "Auction App API Testing",
  "main": "auction_api.test.js",
  "scripts": {
    "test": "jest auction_api.test.js --forceExit",
    "test:api": "jest auction_api.test.js --forceExit",
    "test:api:debug": "jest auction_api.test.js --detectOpenHandles --forceExit",
    "test:ui": "npx playwright test index_page.test.js",
    "test:ui:debug": "npx playwright test index_page.test.js --debug",
    "test:ui:auto": "node run-ui-tests.js",
    "test:all": "npm run test:api && npm run test:ui:auto"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@playwright/test": "^1.41.2",
    "playwright": "^1.41.2"
  },
  "jest": {
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["./jest.setup.js"]
  }
}
